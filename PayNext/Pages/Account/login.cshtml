@page
@model PayNext.App.Pages.Account.loginModel
@{
  ViewData["Title"] = "Login";
  Layout = "~/Pages/Shared/_LoginLayout.cshtml";
}
<div class="container">
    <div class="loginbox">
        <div class="row">
            <div class="col-12">
                <div class="iconbox"><i class="far fa-user"></i></div>
            </div>
            <div class="col-12 text-center mb-3">
                <h2>Welcome to PayNext</h2>
            </div>
        </div>
        @if (!String.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p id="ErrorMessage" class="alert-danger" role="alert">@Model.ErrorMessage</p>
        }
        @if (!String.IsNullOrEmpty(Model.SuccessMessage))
        {
            <p id="ErrorMessage" class="alert-success" role="alert">@Model.SuccessMessage</p>
        }
        <form asp-page-handler="Login" method="post">

            <div class="row justify-content-center">
                <div class="col-12 col-md-8 ml-auto mb-2">
                    <label for="exampleFormControlInput1" class="form-label">Email Address</label>
                    <input type="text" class="form-control" asp-for="AuthenticateModel.Username" placeholder="">
                </div>
                <div class="col-12 col-md-8 ml-auto mb-2 mt-2">
                    <label for="exampleFormControlInput1" class="form-label">Password</label>
                    <input type="text" class="form-control" asp-for="AuthenticateModel.Password" placeholder="">
                </div>
            </div>
            <div class="row">
                <div class="col-12 forlink mt-4 mt-md-3 text-center forgot">
                    <a href="#">Forgot Password ?</a>
                </div>
                <input type="hidden" id="RedirectURL" asp-for="RedirectURL" />
                <p id="SuccessMessage1" class="mt-5" style="color:green;display:none;">
                </p>
                <p id="btnLoginErros" class="mt-5" style="color:red;display:none;">
                </p>
                <div class="col-10 col-md-5 mx-auto ms-md-auto mt-4 mt-md-3">
                    <button type="submit" class="btn btn-primary w-100">Login Now</button>
                </div>
                <div class="col-12 col-md-12 forlink mt-4 mt-md-4 text-center">
                    Don't have an account yet?
                    <a asp-page="/Account/register" class="d-inline-block">Register here </a>
                </div>
            </div>
        </form>
    </div>
</div>